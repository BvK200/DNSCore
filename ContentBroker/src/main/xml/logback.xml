<configuration scan="true">

	<!--  log4j configuration log4j configuration log4j  -->

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>

     <appender name="GRID" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>TRACE</level>
        </filter>
		<file>log/grid.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>log/grid.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
	    <encoder>
	        <pattern>%d [%thread] %-5level %logger{35} - %msg%n</pattern>
	    </encoder>
	</appender>   
	
	<appender name="CONTENTBROKER_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>TRACE</level>
        </filter>
		<file>log/contentbroker.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>log/contentbroker.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
	    <encoder>
	        <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg%n</pattern>
	    </encoder>
	</appender>
	<appender name="UNSORTED_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>TRACE</level>
        </filter>
		<file>log/unsorted.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>log/unsorted.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
	    <encoder>
	        <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg%n</pattern>
	    </encoder>
	</appender>

	<appender name="TIME_STAMP_ACTIONS_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>TRACE</level>
        </filter>
		<file>log/time_stamp_actions.csv</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>log/time_stamp_actions.%d{yyyy-MM-dd}.csv</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
	    <encoder>
	        <pattern>%msg%n</pattern>
	    </encoder>
	</appender>


	<appender name="OBJECT" class="ch.qos.logback.classic.sift.SiftingAppender">
		<discriminator>
			<key>object_id</key>
			<defaultValue>default-object-log</defaultValue>
		</discriminator>
		<sift>
			<appender name="CONTENTBROKER_LOG-${object_id}" class="ch.qos.logback.core.FileAppender">
				<file>log/object-logs/${object_id}.log</file>
				<encoder>
					<pattern>%d %level %logger{35} - %msg%n</pattern>
				</encoder>
			</appender>
		</sift>
	</appender>
        
    <appender name="WORKER" class="ch.qos.logback.classic.sift.SiftingAppender">
		<discriminator>
			<key>worker_id</key>
			<defaultValue>default-worker-log</defaultValue>
		</discriminator>
		<sift>
			<appender name="WORKER_LOG-${worker_id}" class="ch.qos.logback.core.FileAppender">
				<file>log/worker-logs/${worker_id}.log</file>
				<encoder>
					<pattern>%d %level %logger{35} - %msg%n</pattern>
				</encoder>
			</appender>
		</sift>
	</appender>
        
    <logger name="de.uzk.hki.da"  additivity="false" level="DEBUG">
    	<appender-ref ref="OBJECT" />
	</logger>
	<logger name="de.uzk.hki.da.core"  additivity="false" level="DEBUG">
		<appender-ref ref="WORKER" />
	</logger>
	<logger name="de.uzk.hki.da.action" additivity="false" level="DEBUG">
		<appender-ref ref="WORKER" />
	</logger>
	<logger name="de.uzk.hki.da.service" additivity="false" level="DEBUG">
		<appender-ref ref="WORKER" />
	</logger>
	<logger name="org.hibernate" level="INFO">
		<appender-ref ref="WORKER" />
	</logger>

        
	<logger name="org.apache.activemq" level="ERROR">
		<appender-ref ref="CONTENTBROKER_LOG" />
	</logger>
	<logger name="de.uzk.hki.da.core.ContentBroker" level="DEBUG">
		<appender-ref ref="CONTENTBROKER_LOG" />
	</logger>
	
	
	
	<logger name="de.uzk.hki.da.grid"  additivity="false" level="DEBUG">
		<appender-ref ref="GRID" />
	</logger>
	<logger name="de.uzk.hki.da.core.TimeStampLogging"  additivity="false" level="DEBUG">
		<appender-ref ref="TIME_STAMP_ACTIONS_LOG" />
	</logger>
	      
      <root level="OFF" />
</configuration>
