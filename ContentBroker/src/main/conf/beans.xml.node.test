<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:task="http://www.springframework.org/schema/task"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/util
           http://www.springframework.org/schema/util/spring-util-3.0.xsd
           http://www.springframework.org/schema/task
           http://www.springframework.org/schema/task/spring-task-3.0.xsd">
           
	<import resource="classpath*:META-INF/beans-actions.xml"/>
	<import resource="classpath*:META-INF/beans-infrastructure.node.xml"/>

	<bean class="de.uzk.hki.da.core.LoadBalancer" id="loadBalancer">
		<property name="workAreaRootPath" value="${localNode.workAreaRootPath}" />
		<property name="fileSizeFactor" value="3" />
		<property name="freeDiskSpacePercent" value="5" />
	</bean>
    
    <task:executor id="taskExecutor" pool-size="10"
		queue-capacity="20" rejection-policy="CALLER_RUNS" />

	<task:scheduled-tasks scheduler="taskScheduler">
		<task:scheduled ref="contentBroker" method="scheduleTask" fixed-delay="500" />
		<task:scheduled ref="ingestAreaScannerWorker" method="scheduleTask" fixed-delay="1000" />
		<task:scheduled ref="userAreaScannerWorker" method="scheduleTask" fixed-delay="1000" />
		<task:scheduled ref="integrityScannerWorker" method="scheduleTask" fixed-delay="20000" />
	</task:scheduled-tasks>

	<task:scheduler id="taskScheduler" pool-size="20" />
	
	<bean id="actionRegistry" class="de.uzk.hki.da.core.ActionRegistry" scope="prototype">
		<property name="maxThreads">
			<util:map>
				<entry key="RestartIngestWorkflowAction" value="1" />
				<entry key="IngestUnpackAction" value="1" />
				<entry key="IngestConvertAction" value="1" />
				<entry key="FriendshipConversionAction" value="1" />
				<entry key="IngestCreatePremisAction" value="1" />
				<entry key="IngestCheckFormatsAction" value="1" />
				<entry key="IngestScanAction" value="1" />
				<entry key="IngestRegisterURNAction" value="1" />
				<entry key="IngestPrepareSendToPresenterAction" value="1" />
				<entry key="IngestUpdateMetadataAction" value="1" />
				<entry key="IngestPresUpdateMetadataAction" value="1" />
				<entry key="IngestShortenFileNamesAction" value="1" />
				<entry key="IngestScanForPresentationAction" value="1" />
				<entry key="IngestConvertForPresentationAction" value="1" />
				<entry key="IngestArchiveReplicationCheckAction" value="1" />
				<entry key="IngestArchiveReplicationAction" value="1" />
				<entry key="IngestTarAction" value="1" />
				<entry key="RetrievalObjectToWorkAreaAction" value="1" />
				<entry key="RetrievalAction" value="1" />
				<entry key="AuditAction" value="1" />
				<entry key="IngestBuildAIPAction" value="1" />
				<entry key="PIPGenPrepareSendToPresenterAction" value="1" />
				<entry key="PIPGenUpdateMetadataAction" value="1" />
				<entry key="PIPGenShortenFileNamesAction" value="1" />
				<entry key="PIPGenConvertAction" value="1" />
				<entry key="PIPGenScanForPresentationAction" value="1" />
				<entry key="PIPGenObjectToWorkAreaAction" value="1" />
				<entry key="PIPGenCleanWorkAreaAction" value="1" />
			</util:map>
		</property>
		<property name="actionPriority">
			<util:list>
				<value>RestartIngestWorkflowAction</value>
				<value>IngestArchiveReplicationCheckAction</value>
				<value>IngestArchiveReplicationAction</value>
				<value>IngestTarAction</value>
				<value>IngestCreatePremisAction</value>
				<value>IngestBuildAIPAction</value>
				<value>IngestPrepareSendToPresenterAction</value>
				<value>IngestPresUpdateMetadataAction</value>
				<value>IngestShortenFileNamesAction</value>
				<value>IngestConvertForPresentationAction</value>
				<value>IngestScanForPresentationAction</value>
				<value>FriendshipConversionAction</value>
				<value>IngestCreatePremisAction</value>
				<value>IngestCheckFormatsAction</value>
				<value>IngestUpdateMetadataAction</value>
				<value>IngestConvertAction</value>
				<value>IngestRegisterURNAction</value>
				<value>IngestScanAction</value>
				<value>IngestUnpackAction</value>
				<value>RetrievalObjectToWorkAreaAction</value>
				<value>RetrievalAction</value>
				<value>AuditAction</value>
				<value>PIPGenCleanWorkAreaAction</value>
				<value>PIPGenPrepareSendToPresenterAction</value>
				<value>PIPGenUpdateMetadataAction</value>
				<value>PIPGenShortenFileNamesAction</value>
				<value>PIPGenConvertAction</value>
				<value>PIPGenScanForPresentationAction</value>
				<value>PIPGenObjectToWorkAreaAction</value>
			</util:list>
		</property>
		<property name="blockedBy">
			<util:map>
				<entry key="IngestArchiveReplicationAction" value="IngestArchiveReplicationCheckAction"/>
			</util:map>
		</property>
	</bean>
	
</beans>
